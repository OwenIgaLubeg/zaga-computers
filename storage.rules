rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'sales2.zagatechnologiesltd@gmail.com';
    }
    
    // Product images - readable by all, writable only by admin
    match /products/{allPaths=**} {
      allow read: if true; // Anyone can view product images
      allow write: if isAdmin(); // Only admin can upload/delete product images
    }
    
    // User profile images - users can only upload their own
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

